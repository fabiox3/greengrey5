{% extends 'base.html.twig' %}

{% block title %}Scheda olivo | GreenGrey{% endblock %}

{% block content %}

<div class="container">
    {% set this_id = "" %}
    {% set this_code = "" %}

    {% for olivo in olivos %}
    <h1>Scheda olivo {{ olivo.code }}</h1>

        {% set this_id = olivo.id %}
        {% set this_code = olivo.code %}

    {% endfor %}

    <small class="d-block text-end mt-3">
        <button type="button" class="btn btn-sm btn-outline-primary"><a href="{{ path('oliveto_details_new', {'id': this_id, 'code': this_code}) }}">Aggiungi</a></button>
    </small>

    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <h6 class="border-bottom pb-2 mb-0"><strong>Produttività</strong></h6>

        {% for detail in details %}
            {% if detail.categoria == 'Produttività' %}
                <div class="d-flex text-muted pt-3">
                    <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false" style="margin:0px 10px 10px 0px;"><title>Placeholder</title><rect width="100%" height="100%" fill="#737000"></rect><text x="50%" y="50%" fill="#737000" dy=".3em">32x32</text></svg>

                    <p class="pb-3 mb-0 small lh-sm border-bottom">
                        <strong class="d-block text-gray-dark">{{ detail.data |date('d/m/Y') }}</strong>
                        {{ detail.note }}
                    </p>
                </div>
            {% endif %}
        {% endfor %}

    </div>

    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <h6 class="border-bottom pb-2 mb-0"><strong>Potature</strong></h6>

        {% for detail in details %}
            {% if detail.categoria == 'Potatura' %}
                <div class="d-flex text-muted pt-3">
                    <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false" style="margin:0px 10px 10px 0px;"><title>Placeholder</title><rect width="100%" height="100%" fill="#32611f"></rect><text x="50%" y="50%" fill="#32611f" dy=".3em">32x32</text></svg>
                    <p class="pb-3 mb-0 small lh-sm border-bottom">
                        <strong class="d-block text-gray-dark">{{ detail.data |date('d/m/Y') }}</strong>
                        {{ detail.note }}
                    </p>
                </div>
            {% endif %}
        {% endfor %}

    </div>

    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <h6 class="border-bottom pb-2 mb-0"><strong>Trattamenti</strong></h6>

        {% for detail in details %}
            {% if detail.categoria == 'Trattamento' %}
                <div class="d-flex text-muted pt-3">
                    <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false" style="margin:0px 10px 10px 0px;"><title>Placeholder</title><rect width="100%" height="100%" fill="#00807d"></rect><text x="50%" y="50%" fill="#00807d" dy=".3em">32x32</text></svg>
                    <p class="pb-3 mb-0 small lh-sm border-bottom">
                        <strong class="d-block text-gray-dark">{{ detail.data |date('d/m/Y') }}</strong>
                        {{ detail.note }}
                    </p>
                </div>
            {% endif %}
        {% endfor %}

    </div>

</div>
{% endblock %}
